@model List<Category>
<partial name="_Notification" />
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary p-2">
				<i class="bi bi-plus-square"></i> Create new category
			</a>
		</div>
	</div>
	<table class="table  table-hover table-bordered table-striped">
		<thead>
			<tr class="table-primary">
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.OrderBy(obj => obj.DisplayOrder))
			{
				<tr>
					<td class="w-25">@obj.Name</td>
					<td>
						@obj.DisplayOrder
					</td>
					<td>
						<div class="w-50 btn-group" role="group">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil mx-2"></i> Edit</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secondary"><i class="bi bi-trash mx-1"></i> Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>